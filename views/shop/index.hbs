{{# each products}}
  <div class="row">
    {{# each this}}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img class="img-responsive" src={{this.imagePath}} alt="...">
          <div class="caption">
            <h3>{{this.title}}</h3>
            <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ratione dolores quaerat, error perferendis eaque ut veritatis doloremque nisi, nobis unde! Tempore atque itaque iusto nesciunt eum, provident magni soluta illum.</p>
            <p>
                <div class="clearfix">
                    <div class="price pull-left">${{this.price}}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Buy</a>
                </div>
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  <div>
{{/each}}
